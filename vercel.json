{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_SITE_URL": "https://halal-chain.com",
    "NEXT_PUBLIC_API_URL": "https://api.halal-chain.com"
  },
  "domains": [
    "halal-chain.com",
    "www.halal-chain.com"
  ],
  "github": {
    "enabled": true,
    "silent": false
  }
}